<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   
    <div class="container body-content">
        <div class="row">
            <div class="col-md-2">
                <hr />
                <ul  class="list-unstyled"  id="main-ul">
                    <li   style="padding-top:10px;">
                        <a href="/"><i class="glyphicon glyphicon-home"></i>Anasayfa</a>
                    </li>
                    <li   style="padding-top:10px;">
                        <a href="/Ogrenci"><i class="glyphicon glyphicon-user"></i>Öğrenciler</a>
                    </li>
                    <li   style="padding-top:10px;">
                        <a href="/"><i class="glyphicon glyphicon-phone"></i>Veliler</a>
                    </li>
                    <li  style="padding-top:10px;">
                        <a href="/"><i class="glyphicon glyphicon-pencil"></i>Ödemeler</a>
                    </li>
                </ul>
            </div>

            <div class="col-md-10">
                <hr />
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
